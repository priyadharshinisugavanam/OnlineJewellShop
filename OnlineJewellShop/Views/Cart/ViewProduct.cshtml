@model OnlineJewellShop.Entity.Product
@using (Html.BeginForm("ViewProduct", "Cart", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="containers">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-4">
                <img style="min-height:20%;width:30%" src="~/ProductImages/@Html.DisplayFor(Model=>Model.ProductImagePath)" />
            </div>
            <div class=" col-lg-8 col-md-8 col-sm-8">
                <h3 style="color:white">Product Name:</h3> <h4 style="color:cyan">@Model.ProductName</h4>
                <h3 style="color:white">Product Rate: </h3> <h4 style="color:cyan">Rs.@Model.ProductRate</h4>
                <h4 class="btn btn-danger" style="border-radius:20px 20px 20px 20px">@Html.ActionLink("Add to cart", "AddToCart", "Cart", new { id = Model.ProductId, @class = "LinkColor" }, null)</h4>
            </div>
        </div>

    </div>

}

