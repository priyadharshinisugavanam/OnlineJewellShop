@model OnlineJewellShop.Models.PaymentModel

@{
    ViewBag.Title = "Payment";
}
<h2>SignUp</h2>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@using (Html.BeginForm("Payment", "Cart", FormMethod.Post))
{
<table cellpadding="10">
    
    <tr>
        <td>@Html.LabelFor(Model => Model.CardHolderName)</td>
        <td>
            @Html.TextBoxFor(model => model.CardHolderName,new { maxlength = "35" })
            @Html.ValidationMessageFor(model => model.CardHolderName, "", new { @class = "danger" })
        </td>
        <td style="color:red"></td>
    </tr>
    <tr>
        <td>@Html.LabelFor(Model => Model.CardNumber)</td>
        <td>
            @Html.TextBoxFor(model => model.CardNumber,new { maxlength = "15",minlength="12" })
            @Html.ValidationMessageFor(model => model.CardNumber, "", new { @class = "danger" })
        </td>
        <td style="color:red">
            @if (ViewBag.Message != null)
            {
                @ViewBag.Message
            }
        </td>

    </tr>
    <tr>
        <td>@Html.LabelFor(Model => Model.Cvv)</td>
        <td>
            @Html.TextBoxFor(model => model.Cvv,new { maxlength = "3" })
            @Html.ValidationMessageFor(model => model.Cvv, "", new { @class = "danger" })
        </td>
        <td style="color:red">
        </td>
    </tr>
    <tr>
        <td>@Html.Label("Valid Date")</td>
        <td>
            @Html.TextBoxFor(model => model.ValidDate,new { maxlength = "5" })
            @Html.ValidationMessageFor(model => model.ValidDate, "", new { @class = "danger" })
        </td>
        <td style="color:red">
        </td>
    </tr>
    <tr>
        <td>@Html.Label("Enter the Amount")</td>
        <td>
            @Html.TextBoxFor(model => model.Total)
            @Html.ValidationMessageFor(model => model.ValidDate, "", new { @class = "danger" })
        </td>
        <td style="color:red">
        </td>
    </tr>
    <tr>

        <td align="justify">
            <input type="submit" name="Pay" runat="server" />
            @Html.AntiForgeryToken()
        </td>

    </tr>
</table>
}
