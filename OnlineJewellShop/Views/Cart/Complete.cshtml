@model IEnumerable<OnlineJewellShop.Entity.OrderDetail>
@{
    ViewBag.Title = "Checkout Complete";
}
<h2>Checkout Complete</h2>
<div class="containers">
    <div class="rows" style="margin-bottom:100px">
        <h3>Thanks for your order!</h3>
        <br />
        <h3>Products</h3>
        @foreach (OnlineJewellShop.Entity.OrderDetail product in Model)
        {
            product.Product.ProductImagePath = Path.Combine("~/ProductImages/", product.Product.ProductImagePath);
            <div class="col-lg-4 col-md-4 " style="height:200px;margin-top:100px;padding-bottom:10px">
                <img style="width:20%;height:80%;border-radius:20px 20px 20px 20px" src="@Url.Content(product.Product.ProductImagePath)" />
                <h3>@product.Product.ProductName</h3>
                <h3>Rs.@product.Product.ProductRate</h3>

            </div>
        }
       
        <div class="col-lg-4 col-md-4 " style="height:200px;margin-top:100px;padding-bottom:10px">
            <h3>Grand Total:</h3><h3>@Model.FirstOrDefault().Order.Total</h3>
            <h3>
                Enjoy Shopping in SM
                Want to see Other Collections??@Html.ActionLink("Click Here!!", "ViewProductCategory", "User")
            </h3>
        </div>

    </div>

