@model OnlineJewellShop.Models.OrderModel
@{
    ViewBag.Title = "Address And Payment";
}
<h2>Shipping details</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"
        type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"
        type="text/javascript"></script>
@using (Html.BeginForm())
{
<fieldset>
    <table cellpadding="10">
        
        <tr>
            <td>@Html.LabelFor(Model => Model.Username)</td>
            <td>
                @Html.TextBoxFor(model => model.Username,new { maxlength = "35" })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "danger" })
            </td>
            <td style="color:red"></td>
        </tr>

        <tr>
            <td>@Html.LabelFor(Model => Model.Address)</td>
            <td>
                @Html.TextBoxFor(model => model.Address)
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "danger" })
            </td>
            <td style="color:red">
            </td>

        </tr>
        <tr>
            <td>@Html.LabelFor(Model => Model.City)</td>
            <td>
                @Html.TextBoxFor(model => model.City,new { maxlength = "20" })
                @Html.ValidationMessageFor(model => model.City, "", new { @class = "danger" })
            </td>
            <td style="color:red">
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(Model => Model.State)</td>
            <td>
                @Html.TextBoxFor(model => model.State)
                @Html.ValidationMessageFor(model => model.State, "", new { @class = "danger" })
            </td>
            <td style="color:red">
            </td>
        </tr>

        <tr>
            <td>@Html.LabelFor(Model => Model.PostalCode)</td>
            <td>
                @Html.TextBoxFor(model => model.PostalCode,new { maxlength = "6" })
                @Html.ValidationMessageFor(model => model.PostalCode, "", new { @class = "danger" })
            </td>
            <td style="color:red">
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(Model => Model.Country)</td>
            <td>
                @Html.TextBoxFor(model => model.Country)
                @Html.ValidationMessageFor(model => model.Country, "", new { @class = "danger" })
            </td>
            <td style="color:red">
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(Model => Model.Phone)</td>
            <td>
                @Html.TextBoxFor(model => model.Phone,new { maxlength = "10" })
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "danger" })
            </td>
            <td style="color:red">
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(Model => Model.Email)</td>
            <td>
                @Html.TextBoxFor(model => model.Email,new { maxlength = "40" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "danger" })
            </td>
            <td style="color:red">
            </td>
        </tr>

        <tr>

            <td align="justify">
                <input type="submit" runat="server" />
                @Html.AntiForgeryToken()
            </td>

        </tr>
    </table>
</fieldset>
}
