        </tr>
        <tr>
            <td>@Html.LabelFor(Model => Model.Email)</td>
            <td>
                @Html.TextBoxFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "danger" })
            </td>
            <td style="color:red">
            </td>
        </tr>

        <tr>

            <td align="justify">
                <input type="submit" runat="server" />
                @Html.AntiForgeryToken()
            </td>

        </tr>
    </table>
</fieldset>
}
