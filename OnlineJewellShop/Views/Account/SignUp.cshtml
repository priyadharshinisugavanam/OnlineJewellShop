@model OnlineJewellShop.Models.UserEntityModel

@{
    ViewBag.Title = "SignUp";
}
<script src="~/Content/OnlineJewellShopValidation.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@using (Html.BeginForm("SignUp", "Account", FormMethod.Post))
{
    <main id="main-holder">
        <div id="login-header" class="LoginFont">Sign Up</div>
        <form id="login-form">
            @Html.TextBoxFor(Model => Model.UserID, new { @class = "login-form-field", @placeHolder = "User's Name", autocomplete = "Off",maxlength="35"})
            @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "danger" })<br />

            @Html.PasswordFor(Model => Model.Password, new { @class = "login-form-field", @placeHolder = "Password", autocomplete = "Off",maxlength="25" })
            @Html.ValidationMessageFor(Model => Model.Password, "", new { @class = "danger" })

            @Html.PasswordFor(Model => Model.ConformPassword, new { @class = "login-form-field", @placeHolder = "Conform password" })
            @Html.ValidationMessageFor(model => model.ConformPassword, "", new { @class = "danger" })<br />
            <div style="color:red">
                @if (ViewBag.message != null)
                {
                    @ViewBag.message
                }
            </div>

            @Html.TextBoxFor(Model => Model.MailId, new { @class = "login-form-field", @placeHolder = "Mail id", autocomplete = "Off",maxlength="40" })
            @Html.ValidationMessageFor(model => model.MailId, "", new { @class = "danger" })<br />

            @Html.TextBoxFor(Model => Model.PhoneNumber, new { @class = "login-form-field", @placeHolder = "Phone number", autocomplete = "Off",maxlength="10" })
            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "danger" })<br />

            <input type="submit" value="Sign Up" runat="server" id="login-form-submit" />@Html.AntiForgeryToken()
        </form>
    </main>
}