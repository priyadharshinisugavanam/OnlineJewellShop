@model OnlineJewellShop.Models.LoginModel

@{
    ViewBag.Title = "Login";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<h2>Login</h2>
@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <table cellpadding="10">
        <tr>
            <td>@Html.Label("User Id")</td>
            <td>
                @Html.TextBoxFor(Model => Model.UserID, new { @id = "UserId" })
                @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "danger" })
            </td>
        </tr>
        <tr>
            <td>@Html.Label("Password")</td>
            <td>@Html.PasswordFor(Model => Model.Password, new { @id = "password" }) @Html.ValidationMessageFor(Model => Model.Password, "", new { @class = "danger" })</td>
            <td style="color:red">
                @if (ViewBag.message != null)
                {
                    @ViewBag.message
                }
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" runat="server" />@Html.AntiForgeryToken()
            </td>
        </tr>

    </table>
}


